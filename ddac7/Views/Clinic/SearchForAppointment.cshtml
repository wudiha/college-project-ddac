
@{
    ViewData["Title"] = "SearchForAppointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Search For Appointment</h2>


    <form method="get" action="GetAppointment">
        <p>Your Clinic Name: <input type="text" value="@ViewBag.ClinicName" name="PartitionName" readonly/></p>
        <p>Enter Appointment ID: <input type="text" value="" name="RowName" required /></p>
        <p><input type="submit" value="Search" name="submit" /></p>
    </form>


@if (TempData["message"] != null)
{
    <script>
		alert("@TempData["message"]");
    </script>
}

    <style>
        input[type=text] {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            box-sizing: border-box;
            border: 3px solid #ccc;
            -webkit-transition: 0.5s;
            transition: 0.5s;
            outline: none;
        }

       input[type=text]:focus {
                border: 3px solid #555;
        }

        input[type=submit] {
            width: 150px;
            padding: 10px;
            background: #2196F3;
            color: white;
            font-size: 17px;
            border: 1px solid grey;
            border-radius: 2px;
        }
    </style>